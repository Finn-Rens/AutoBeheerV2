<Window x:Class="AutoBeheerV2.EigenarenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoBeheerV2"
        mc:Ignorable="d"
        Title="Eigenaren" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgEigenaar" HorizontalAlignment="Left" Height="306" Margin="10,10,0,0" VerticalAlignment="Top" Width="417" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" ClipboardContentBinding="{x:Null}" Header="Id"/>
                <DataGridTextColumn Binding="{Binding Naam}" ClipboardContentBinding="{x:Null}" Header="Naam"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnNieuwEigenaar" Content="NieuwEigenaar" HorizontalAlignment="Left" Margin="588,94,0,0" VerticalAlignment="Top" Width="107" Click="btnNieuwEigenaar_Click"/>
        <Button x:Name="btnEigenaarVerwijderen" Content="Verijwderen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="107" Margin="588,134,0,0" Click="btnEigenaarVerwijderen_Click"/>
        <Button x:Name="btnWijzigen" Content="Wijzigen" HorizontalAlignment="Left" Margin="588,177,0,0" VerticalAlignment="Top" Width="107" Click="btnWijzigen_Click"/>
    </Grid>
</Window>
