<Window x:Class="AutoBeheerV2.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoBeheerV2"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="71,111,0,0" TextWrapping="Wrap" Text="Naam" VerticalAlignment="Top" FontSize="15"/>
        <TextBlock HorizontalAlignment="Left" Margin="71,142,0,0" TextWrapping="Wrap" Text="wachtwoord" VerticalAlignment="Top" FontSize="15"/>
        <TextBox x:Name="txtNaam" HorizontalAlignment="Left" Height="23" Margin="185,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="pbWachtwoord" HorizontalAlignment="Left" Margin="185,142,0,0" VerticalAlignment="Top" Width="120" Height="23"/>
        <Button x:Name="btnInloggen" Content="Inloggen" HorizontalAlignment="Left" Margin="185,199,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnSluiten" Content="Sluiten" HorizontalAlignment="Left" Margin="282,199,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
